import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
       Scanner sc=new Scanner(System.in);
       int n=sc.nextInt();
       int arr[]=new int[n];
       for(int i=0;i<n;i++){
           arr[i]=sc.nextInt();
       }
       int fl=0;
       boolean f=false;
       int min=arr[0];
       for(int i=0;i<n;i++)
       {
           if(arr[i]<min)
           {
               f=true;
               min=arr[i];
               fl=i;
           }
       }
       //System.out.println(fl);
       if(!f){
           System.out.println("-1");
       }else{
           System.out.println(fl);
       }
    }
}